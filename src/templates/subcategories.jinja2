{% extends "base.jinja2" %}
{% block main %}
  <main class="min-h-screen">
    <div class="mx-auto max-w-screen-xl px-4 py-8 md:px-12">
      <h1
        class="relative z-10 mx-auto mb-12 w-max text-center font-playfair text-2xl font-bold before:absolute before:-top-2 before:-z-10 before:h-1 before:w-full before:rounded-full before:bg-primary md:text-3xl md:before:-top-2.5"
      >
        {{ type_tasks[0].get_full_type(lang) }}
      </h1>
      <div class="grid grid-cols-subcategories gap-6">
        {% for task in type_tasks %}
          <a
            href="{{ task.get_path_name(lang) }}"
            class="group relative flex justify-center rounded-xl py-8 px-12 ring-inset ring-gray-400/30 transition-all duration-200 ease-in hover:bg-white/40 hover:shadow-[inset_0_2px_10px_rgba(0,0,0,0.05)] hover:ring-1"
          >
            <div class="transition-opacity duration-100 group-hover:opacity-0">
              {{ task.get_svg() }}
            </div>
            <p
              class="absolute left-6 bottom-2 opacity-0 transition-all duration-300 ease-out group-hover:bottom-8 group-hover:opacity-100"
            >
              {{ task.get_variant(lang) }}
            </p>
          </a>
        {% endfor %}
      </div>
    </div>
  </main>
{% endblock %}
