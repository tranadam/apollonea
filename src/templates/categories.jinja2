{% extends "base.jinja2" %}
{% block relative_imports %}
  <link rel="stylesheet" href="../css/output.css" />
  <link rel="stylesheet" href="../css/extra.css" />
{% endblock %}
{% block main %}
  <main class="min-h-screen">
    <div class="mx-auto max-w-screen-xl px-4 py-8 md:px-12">
      <div class="grid grid-cols-categories gap-6">
        {% for task in task_types %}
          <a
            href="{{ task.anchor_tag }}"
            class="group flex flex-col items-center justify-end gap-6 rounded-xl p-8 ring-inset ring-gray-400/30 transition-all duration-200 ease-in hover:bg-white/40 hover:shadow-[inset_0_2px_10px_rgba(0,0,0,0.05)] hover:ring-1"
          >
            <div class="task-card__illustation">
              {{ task.task_svg }}
            </div>
            <div class="flex flex-col items-center justify-center gap-3">
              <p class="font-playfair text-lg font-medium">
                {{ task.heading }}
              </p>
              <button
                class="btn invisible relative overflow-hidden rounded-md bg-primary px-8 py-3 text-base font-medium text-secondary opacity-0 transition-opacity duration-300 group-hover:visible group-hover:opacity-100 group-hover:active:opacity-80"
              >
                <span
                  class="absolute left-0 top-1/2 h-1/2 w-1 origin-top bg-secondary transition-all duration-200"
                ></span>
                <span
                  class="absolute left-0 top-1/2 h-1/2 w-1 origin-bottom -translate-y-full bg-secondary transition-all duration-200"
                ></span>
                <span
                  class="absolute left-0 top-1/2 h-[0.1em] w-0 -translate-y-1/2 rounded-full bg-secondary transition-all duration-200"
                ></span>
                <p class="btn__text transition-all duration-200">
                  {{ cta }}
                </p>
              </button>
            </div>
          </a>
        {% endfor %}
      </div>
    </div>
  </main>
{% endblock %}
